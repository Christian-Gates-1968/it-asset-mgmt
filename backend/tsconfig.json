{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "rootDir": "./",
    "outDir": "../dist",
    "strict": true,
    "moduleResolution": "Node16",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "db.js"],
  "exclude": ["node_modules"]
}
